<Window x:Class="Chess.Connecting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="160" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="None" BorderThickness="2">
    <Grid Background="GhostWhite">
        <ProgressBar Height="30" Margin="10,25,10,0" VerticalAlignment="Top" IsIndeterminate="True"/>
        <TextBlock Name="statusBlk" Height="40" Margin="10,70,10,0" TextWrapping="Wrap" Text="Connecting to Server . . ." VerticalAlignment="Top"/>
        <Button Name="cancelBtn" Content="Cancel" Margin="0,0,0,15" Height="25" Width="100" VerticalAlignment="Bottom" Click="cancelBtn_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
